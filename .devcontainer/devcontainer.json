{
  "name": "Claude Code Sandbox (Max Plan)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "mounts": [
    "source=claude-oauth-creds-${devcontainerId},target=/home/vscode/.claude-persist,type=volume"
  ],
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postAttachCommand": "bash .devcontainer/save-creds.sh",
  "forwardPorts": [7680],
  "portsAttributes": {
    "7680": {
      "label": "Claude Task API",
      "onAutoForward": "notify",
      "visibility": "private"
    }
  },
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  }
}
